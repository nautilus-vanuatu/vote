datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Voting {
  id         String   @id @default(uuid())
  id_system  String   @unique
  title      String
  desc       String
  begin_date DateTime
  end_date   DateTime
  group      Group    @relation(fields: [groupId], references: [id])
  groupId    String
  Status     Status   @default(REGISTERED)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Group {
  id    String @id @default(uuid())
  name  String
  Votings Voting[]
}

enum Status {
  OPEN
  CLOSED
  REGISTERED
}
